          <% else %>
            <% @matching_user[0].rating.times do %>
              <i class="far fa-star"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- description -->
    <div class="row" id="user-description">
      <h2>About me</h2>
      <%= @matching_user[0].description %>
    </div>
  </div>

</div>
